# ─── Database ────────────────────────────────────────────────
DATABASE_URL=postgresql+asyncpg://threedify:changeme@db:5432/threedify
POSTGRES_DB=threedify
POSTGRES_USER=threedify
POSTGRES_PASSWORD=changeme  # CHANGE THIS IN PRODUCTION!

# ─── Auth ────────────────────────────────────────────────────
# Admin dashboard credentials (used for /admin login)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-in-production
ADMIN_AUTH_TOKEN=generate-a-random-secret-here

# Worker authentication token (must match WORKER_AUTH_TOKEN on worker)
WORKER_AUTH_TOKEN=generate-a-random-token-here

# ─── File Storage ────────────────────────────────────────────
UPLOAD_DIR=/app/uploads
OUTPUT_DIR=/app/outputs
MAX_UPLOAD_BYTES=20971520

# ─── Rate Limiting ───────────────────────────────────────────
RATE_LIMIT_PER_DAY=20
MAX_PENDING_JOBS=50

# ─── Job Settings ────────────────────────────────────────────
JOB_TIMEOUT_S=600
CLEANUP_INTERVAL_S=120

# ─── CORS ────────────────────────────────────────────────────
# Set to your domain in production (e.g. https://yourdomain.com)
CORS_ORIGINS=["http://localhost:3000"]
